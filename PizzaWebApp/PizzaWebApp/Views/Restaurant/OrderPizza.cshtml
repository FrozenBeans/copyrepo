@model PizzaWebApp.Models.Orderpizza

@{
    ViewData["Title"] = "OrderPizza";
}


<h4>Submit your order?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrderPizza">
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PizzaBuilder">Add another pizza</a>
    <a asp-action="ShowUsersOrders">ShowOrder</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
